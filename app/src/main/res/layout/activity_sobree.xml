<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/d"
    tools:context=".Sobree">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="53dp"
        android:background="#D3D50000"
        android:fontFamily="sans-serif-black"
        android:text="Descubre el mundo de las artes marciales en 'Artes Marciales Total', tu tienda especializada. Ofrecemos kimonos de calidad, armas tradicionales y modernas, y asesoramiento personalizado de un equipo apasionado. Además, encuentra recursos educativos para perfeccionar tu técnica. Únete a nuestra comunidad y haz de tu viaje en las artes marciales una experiencia única.&quot;"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="197dp"
        android:layout_height="152dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/k" />

</androidx.constraintlayout.widget.ConstraintLayout>